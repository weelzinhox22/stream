{
  "name": "welplaytv",
  "version": "1.0.0",
  "description": "A React app for loading and playing M3U playlists",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "cd client && npm run build",
    "render-build": "npm run install-all && npm run build"
  },
  "keywords": [
    "m3u",
    "playlist",
    "react",
    "iptv"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9",
    "swiper": "^11.2.6",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "m3u8-parser": "^6.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
